{
  // ─────────────────────────────────────────────────────────────
  // GENERAL EDITOR BEHAVIOUR
  // ─────────────────────────────────────────────────────────────
  "editor.formatOnPaste": true,
  "editor.formatOnSave": false,
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,

  // ─────────────────────────────────────────────────────────────
  // CSS & TAILWIND v4 SUPPORT
  // ─────────────────────────────────────────────────────────────
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "less.lint.unknownAtRules": "ignore",

  "tailwindCSS.includeLanguages": {
    "html": "html",
    "javascript": "javascript",
    "javascriptreact": "javascript",
    "typescript": "typescript",
    "typescriptreact": "typescript"
  },

  "tailwindCSS.emmetCompletions": true,

  // ─────────────────────────────────────────────────────────────
  // LIVE SERVER EXPERIENCE
  // ─────────────────────────────────────────────────────────────
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.wait": 150,
  "liveServer.settings.useLocalIp": false,
  "liveServer.settings.CustomBrowser": null,
  "liveServer.settings.ignoreFiles": [
    "**/.git/**",
    "**/.vscode/**",
    "**/node_modules/**"
  ],

  // ─────────────────────────────────────────────────────────────
  // PWA / SERVICE WORKER DEVELOPMENT SAFETY
  // ─────────────────────────────────────────────────────────────
  "debug.javascript.usePreviewServiceWorker": false,

  // ─────────────────────────────────────────────────────────────
  // FILES TO EXCLUDE FROM SIDEBAR
  // ─────────────────────────────────────────────────────────────
  "files.exclude": {
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.log": true,
    "**/*.tmp": true,
    "**/*.temp": true,
    "**/*.swp": true
  }
}
